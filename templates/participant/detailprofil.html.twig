{% extends 'base.html.twig'%}

{% block informations %}
    <h1 class="jumbotron-heading text-center">Profil de</h1>
    <h2 class="jumbotron-heading text-center">{{ participant.pseudo }}</h2>
{% endblock %}

{% block main %}

    <div class="row">
        <table class="table">
            <tbody>
            <tr>
                <th scope="row">Prénom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th scope="row">N° de téléphone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th scope="row">E-mail</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th scope="row">Campus</th>
                <td>{{ participant.campus.nom }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('participant_modifier', {'id': participant.id }) }}" class="btn btn-warning">
            Modifier profil</a>
    </div>

{% endblock %}