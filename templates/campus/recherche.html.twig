{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <h1 class="text-muted">Liste des campus</h1>
    <h3>Filtrer les campus</h3>
    <form>
        <label for="cRecherche">Le nom contient</label>
        <input type="text" name="recherche">
        <input type="submit" value="Rechercher">
    </form>
    <div id="campus">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for campus in campus %}
                <tr>
                    <td>{{ campus.id }}</td>
                    <td>{{ campus.nom }}</td>
                    <td>
                        <div class="d-inline-block">
                            <a href="{{ path('campus_show', {'id': campus.id}) }}" class="btn btn-primary">
{#                                <img alt="plus" class="plus" src="{{ asset('') }}"></a>#}
                        </div>
                        <div class="d-inline-block">
                            <a href="{{ path('campus_edit', {'id': campus.id}) }}" class="btn btn-success">
{#                                <img alt="plus" class="plus" src="{{ asset('') }}"></a>#}
                        </div>
                        <div class="d-inline-block">
                            {{ include('campus/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Oups ! Aucun campus trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('campus_new') }}" class="bouton">
{#            <img alt="plus" class="plus" src="{{ asset('') }}"> Ajouter un campus#}
        </a>
    </div>
{% endblock %}
