{% extends 'base.html.twig' %}

{% block title %}Liste des campus{% endblock %}

{% block body %}
    <h1 class="text-muted">Liste des Campus</h1>

    <div id="path_adrCampus" data-path="{{ path('campus_recherche') }}"></div>
    <h3>Filtrer les campus</h3>

    <form id="rechercheDeCampus">
        <div class="d-inline-block">
            <input type="text" name="recherche" class="form-control" id="rechercher">
        </div>
        <div class="d-inline-block">

        </div>
    </form>
    <br>
    <a href="{{ path('campus_new') }}">
        <button class="btn bouton">Créer un Campus</button>
    </a>
    <br>
    <br>

    <div id="resultat">
        {% if rechercher is defined %}
        <div class="text-center table-responsive-xl">
            <table class="table table-hover">
                <thead>
                <tr>

                    <th>Nom</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for campus in listeCampus %}
                    <tr>
                        <td>{{ campus.nom }}</td>
                        <td>
                            <div class="d-inline-block">
                                <a href="{{ path('campus_edit', {'id': campus.id}) }}" class="btn btn-success">
{#                                    <img alt="plus" class="plus" src="{{ asset('build/images/update.svg') }}"></a>#}
                            </div>
                            <div class="d-inline-block">
                                {{ include('campus/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% else %}
            <div class="text-center table-responsive-xl">
                <table class="table table-hover">
                    <thead>
                    <tr>

                        <th>Nom</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for campus in campus %}
                        <tr>

                            <td>{{ campus.nom }}</td>
                            <td>

                                <div class="d-inline-block">
                                    <a href="{{ path('campus_edit', {'id': campus.id}) }}" class="btn btn-success">
{#                                        <img alt="plus" class="plus" src="{{ asset('') }}"></a>#}
                                </div>
                                <div class="d-inline-block">
                                    {{ include('campus/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Oups ! Aucun campus trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
