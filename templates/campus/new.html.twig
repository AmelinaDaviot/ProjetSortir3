{% extends 'base.html.twig' %}

{% block title %}Créer un campus{% endblock %}

{% block body %}
    <h1 class="text-muted">Créer un campus</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                {{ form_start(form) }}
                {{ form_label(form.nom)}}
                {{form_widget(form.nom, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-4">
                {{ form_widget(form.submitt) }}
            </div>
            {{ form_end(form) }}
            <div class="col-8">
                <a href="{{ path('campus_index') }}"><button class="btn bouton">Retour à la liste</button></a>
            </div>
        </div>
    </div>
{% endblock %}
